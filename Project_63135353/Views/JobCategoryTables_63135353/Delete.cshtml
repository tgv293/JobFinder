@model DatabaseLayer.JobCategoryTable

@{
    ViewBag.Title = "Delete Category";
}

<div class="section-top-border">
    <div class="row">
        <div class="col-lg-6 col-md-6">
            <h3>Bạn có chắc chắn muốn xóa không?</h3>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="mt-4">
                    Tên Danh mục:
                    @Html.DisplayFor(model => model.JobCategory)
                </div>

                <div class="mt-1">
                    Mô tả:
                    @Html.DisplayFor(model => model.Description)
                </div>

                <hr />
                <div class="form-group mt-4">
                    <input type="submit" value="Xóa" class="genric-btn danger e-large" style="float:right;" />
                    @Html.ActionLink("Quay Về", "Index", null, new { @class = "btn btn-default", @style = "float:left;" })
                </div>
            }
        </div>
    </div>
</div>
