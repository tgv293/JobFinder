@model DatabaseLayer.JobCategoryTable

@{
    ViewBag.Title = "New Job Category";
}

<div class="section-top-border">
    <div class="row">
        <div class="col-lg-6 col-md-6">
            <h3 class="mb-30">Danh Mục Mới</h3>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="mt-4">
                    @Html.EditorFor(model => model.JobCategory, new
                    {
                        htmlAttributes = new
                        {
                            @class = "form-control single-input",
                            @type = "text",
                            @name = "category",
                            @placeholder = "Nhập tên Danh mục",
                            @onfocus = "this.placeholder = ''",
                            @onblur = "this.placeholder = 'Nhập tên Danh mục'",
                            @required = "true"
                        }
                    })
                    @Html.ValidationMessageFor(model => model.JobCategory, "", new { @class = "text-danger" })
                </div>

                <div class="mt-4">
                    @Html.EditorFor(model => model.Description, new
                    {
                        htmlAttributes = new
                        {
                            @class = "form-control single-input",
                            @type = "text",
                            @name = "category_description",
                            @placeholder = "Nhập mô tả Danh mục",
                            @onfocus = "this.placeholder = ''",
                            @onblur = "this.placeholder = 'Nhập mô tả Danh mục'",
                            @required = "true"
                        }
                    })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>

                <hr />
                <div class="form-group mt-4">
                    <input type="submit" value="Lưu" class="genric-btn success e-large" style="float:right;" />
                    @Html.ActionLink("Quay Về", "Index", null, new { @class = "btn btn-default", @style = "float:left;" })
                </div>
            }
        </div>
    </div>
</div>